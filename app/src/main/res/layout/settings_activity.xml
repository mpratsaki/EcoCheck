<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/kotlin"
    android:padding="7dp">

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="79dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="EcoCheck"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>


    <Button
        android:id="@+id/button_home"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="26dp"
        android:text="Home" />

    <Button
        android:id="@+id/previousbutton"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="270dp"
        android:text="back" />

    <LinearLayout
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="190dp"
        android:orientation="horizontal">>

        <Button
            android:id="@+id/button_vibration"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/my_image_vibration"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="190dp"
        android:orientation="horizontal">>

        <Button
            android:id="@+id/button_music"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:background="@drawable/my_image_music"
            android:layout_weight="1"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginStart="255dp"
        android:layout_marginTop="185dp"
        android:orientation="horizontal">>

        <Button
            android:id="@+id/sound"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/my_image_sound"
            android:soundEffectsEnabled="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="306dp"
        android:layout_height="245dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="260dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_help"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="78dp"
            android:layout_marginTop="50dp"
            android:text="Βοήθεια"
            android:textAllCaps="false"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_reset"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="78dp"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button_sex"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="78dp"
            android:layout_weight="1"
            android:text="Button" />

    </LinearLayout>

    <Button
        android:id="@+id/resetButton"

        android:layout_width="146dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="650dp"
        android:layout_marginEnd="120dp"
        android:text="Total Reset"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>
